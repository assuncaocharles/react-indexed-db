{
  "name": "react-indexed-db-hook",
  "version": "2.0.0",
  "type": "module",
  "description": "React wrapper to IndexedDB database.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*",
    "src/*"
  ],
  "scripts": {
    "test": "karma start ./karma.conf.js",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/",
    "build": "tsc",
    "lint": "eslint src/**",
    "format": "prettier --write \"**/*.{js,ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dethstrobe/react-indexed-db-hook.git"
  },
  "author": "Charles Assunção",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dethstrobe/react-indexed-db-hook/issues"
  },
  "keywords": [
    "indexed",
    "db",
    "indexeddb",
    "websql",
    "sql",
    "indexed-db",
    "database",
    "react",
    "reactjs",
    "database",
    "storage"
  ],
  "homepage": "https://github.com/dethstrobe/react-indexed-db-hook",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.25",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.20",
    "typescript": "^4.8.4"
  }
}
